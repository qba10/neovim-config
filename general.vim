set termguicolors
set clipboard=unnamedplus

set nocompatible
set hidden
set mouse=a

let g:mapleader="\<Space>"
let g:maplocalleader=';'

set timeout ttimeout
set timeoutlen=750  " Time out on mappings
set updatetime=1000 " Idle time to write swap and trigger CursorHold
set ttimeoutlen=10
set splitbelow
set splitright

nnoremap <Space>	<Nop>
xnoremap <Space>	<Nop>
nnoremap ,		<Nop>
xnoremap ,		<Nop>
nnoremap ;		<Nop>
xnoremap ;		<Nop>
nnoremap m		<Nop>
xnoremap m		<Nop>
